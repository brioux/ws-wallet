{
  "name": "ws-wallet",
  "version": "1.0.0",
  "description": "Node.js client on Docker",
  "author": "Betrand Rioux <bertrand.roiux@gmail.com>",
  "main": "./dist/app.js",
  "scripts": {
    "dev": "ts-node app.ts",
    "build": "tsc",
    "start": "node ./dist/app.js",
    "local": "sudo npm i -g && ws-client",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\" \"bin/**/*.ts\"",
    "lint": "tslint -p tsconfig.json",
    "compile": "tsc --project tsconfig.json",
    "prepare": "npm run build",
    "//prepublishOnly" : "npm test && npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "dist/**/*"
  ],
  "bin": {
    "ws-client": "./dist/bin/index.js"
  },
  "dependencies": {
    "@hyperledger/cactus-common": "0.9.0",
    "@types/yargs": "^17.0.2",
    "crypto": "^1.0.1",
    "elliptic": "^6.5.4",
    "jsrsasign": "^10.4.0",
    "winston": "^3.3.3",
    "ws": "^8.1.0",
    "yargs": "^17.1.1"
  },
  "devDependencies": {
    "@types/node": "^16.9.6",
    "prettier": "^2.4.1",
    "tslint": "^6.1.3",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^4.4.3"
  }
}
